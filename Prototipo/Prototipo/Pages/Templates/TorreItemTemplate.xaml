<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Prototipo.Pages.Templates.TorreItemTemplate">
    <ContentView.Content>
        <StackLayout Orientation="Vertical">
            <Image
                Aspect="AspectFit"
                HeightRequest="120"
                WidthRequest="120"
                Source="{Binding Imagem}" />

            <Label 
                Text="{Binding Nome}"
                TextColor="White"
                FontAttributes="Bold"
                FontSize="Micro"
                HorizontalOptions="Center" />
        </StackLayout>
    </ContentView.Content>
</ContentView>